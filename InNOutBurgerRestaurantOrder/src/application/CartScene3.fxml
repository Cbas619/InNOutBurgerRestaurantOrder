            <Label layoutX="241.0" layoutY="312.0" prefHeight="71.0" prefWidth="176.0" text="SUBTOTAL: ">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
